{
  "name": "tms-mobile",
  "version": "1.0.0",
  "description": "TMS Mobile App - React Native version of Training Management System",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace TMS.xcworkspace -scheme TMS -configuration Release",
    "clean": "react-native clean-project-auto"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-native": "0.75.4",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/stack": "^6.3.20",
    "@react-navigation/drawer": "^6.6.6",
    "react-native-screens": "^3.34.0",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-gesture-handler": "^2.18.1",
    "react-native-vector-icons": "^10.0.2",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "react-native-encrypted-storage": "^4.0.3",
    "@react-native-community/netinfo": "^11.2.1",
    "react-native-push-notification": "^8.1.1",
    "@react-native-firebase/app": "^18.6.2",
    "@react-native-firebase/messaging": "^18.6.2",
    "@react-native-firebase/analytics": "^18.6.2",
    "react-native-camera": "^4.2.1",
    "react-native-qrcode-scanner": "^1.5.5",
    "react-native-pdf": "^6.7.3",
    "react-native-share": "^10.0.2",
    "react-native-biometrics": "^3.0.1",
    "react-native-keychain": "^8.1.3",
    "react-native-sqlite-storage": "^6.0.1",
    "react-native-maps": "1.14.0",
    "react-native-geolocation-service": "^5.3.1",
    "react-native-chart-kit": "^6.12.0",
    "react-native-svg": "^14.1.0",
    "react-native-reanimated": "^3.15.0",
    "@tanstack/react-query": "^4.36.1",
    "zustand": "^4.4.7",
    "date-fns": "^2.30.0",
    "react-hook-form": "^7.48.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.75.0",
    "@react-native/metro-config": "^0.75.0",
    "@react-native/typescript-config": "^0.75.0",
    "@types/react": "^18.3.0",
    "@types/react-test-renderer": "^18.3.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.77.0",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.3.1",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  },
  "keywords": [
    "react-native",
    "mobile",
    "training",
    "management",
    "system",
    "offline-first",
    "enterprise"
  ],
  "author": "TMS Development Team",
  "license": "MIT"
} 