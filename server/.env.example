# =============================================================================
# TMS SERVER ENVIRONMENT CONFIGURATION
# =============================================================================
# Kopier denne filen til .env og fyll inn dine verdier

# =============================================================================
# DATABASE CONFIGURATION (PÅKREVD)
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/tms_db"

# Database Connection Pooling & Performance (Valgfritt)
DATABASE_MAX_CONNECTIONS="10"
DATABASE_MIN_CONNECTIONS="2"
DATABASE_CONNECTION_TIMEOUT="10000"
DATABASE_IDLE_TIMEOUT="300000"
DATABASE_MAX_LIFETIME="3600000"
DATABASE_QUERY_TIMEOUT="30000"
DATABASE_RETRY_ATTEMPTS="3"
DATABASE_RETRY_DELAY="1000"
DATABASE_SLOW_QUERY_THRESHOLD="1000"

# =============================================================================
# JWT AUTHENTICATION (PÅKREVD)
# =============================================================================
# JWT secret må være minst 32 tegn for sikkerhet
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"
JWT_EXPIRES_IN="24h"

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT="4000"
NODE_ENV="development"

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Sett til frontend URL i produksjon
CORS_ORIGIN="http://localhost:3000"

# =============================================================================
# RATE LIMITING
# =============================================================================
# Tidsvindu i millisekunder (standard: 15 min)
RATE_LIMIT_WINDOW_MS="900000"
# Maksimalt antall forespørsler per tidsvindu
RATE_LIMIT_MAX_REQUESTS="100"

# =============================================================================
# EMAIL CONFIGURATION (VALGFRITT)
# =============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# =============================================================================
# EXTERNAL APIS (VALGFRITT)
# =============================================================================
# API-nøkkel for Brønnøysund Register Centre
BRONNØYSUND_API_KEY="your-bronnøysund-api-key"

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL="info"
LOG_FILE_PATH="./logs"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Bcrypt rounds (10-15 anbefalt)
BCRYPT_ROUNDS="12"
# Session secret (minst 32 tegn)
SESSION_SECRET="your-session-secret-minimum-32-characters-long"

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maksimal filstørrelse i bytes (standard: 10MB)
MAX_FILE_SIZE="10485760"
UPLOAD_PATH="./uploads"

# =============================================================================
# CACHE CONFIGURATION (VALGFRITT)
# =============================================================================
REDIS_URL="redis://localhost:6379"
# Cache TTL i sekunder (standard: 5 min)
CACHE_TTL="300" 