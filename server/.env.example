THIS SHOULD BE A LINTER ERROR# TMS Server Environment Configuration
# Kopier denne filen til .env og rediger verdiene for ditt miljø

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/tms_db"

# Server Configuration
NODE_ENV=development
PORT=4000

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Session Configuration
SESSION_SECRET="your-session-secret-here-change-this-in-production"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Upload Configuration
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE=10485760

# Cache Configuration (Optional - hvis ikke satt brukes in-memory cache)
# REDIS_URL="redis://localhost:6379"
# REDIS_PASSWORD=""
# REDIS_DB=0

# Email Configuration (Valgfritt - for e-post funksjonalitet)
# SMTP_HOST=""
# SMTP_PORT=587
# SMTP_USER=""
# SMTP_PASS=""
# FROM_EMAIL=""

# Logging Configuration
LOG_LEVEL=info

# API Configuration
API_VERSION=v1
API_PREFIX="/api"

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=300000

# Demo Mode (sett til 'true' for å hoppe over autentisering)
DEMO_MODE=false 